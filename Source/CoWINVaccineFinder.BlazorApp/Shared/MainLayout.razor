@inherits LayoutComponentBase
@inject IStringLocalizer<MainLayout> localizer

<MudLayout>
    <MudAppBar Elevation="4" Color="Color.Primary">
        <MudText Typo="Typo.h6" Class="ml-4">CoWINVaccineFinder</MudText>
        <MudAppBarSpacer />
        <MudTooltip Text="@localizer["GitHub Link"]">
            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/durgaprasadreddyv/cowinvaccinefinder" Target="_blank" />
        </MudTooltip>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
